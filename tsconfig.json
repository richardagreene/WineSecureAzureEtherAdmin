{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true
    },
    "typeRoots": [
        "./node_modules/@types",
        "./typings"
    ],
    "include": [
        "scripts",
        "cotrollers",
        "typings"
    ],
    "exclude": [
        "node_modules"
    ]
}
